@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Doanh thu theo tháng";
}

<h2>Doanh thu theo tháng</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Tháng</th>
            <th>Doanh thu (VNĐ)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Thang</td>
                <td>@item.DoanhThu.ToString("N0")</td>
            </tr>
        }
    </tbody>
</table>
