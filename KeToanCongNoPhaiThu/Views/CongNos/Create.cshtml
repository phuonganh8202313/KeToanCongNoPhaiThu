@model KeToanCongNoPhaiThu.Models.CongNo

@{
    ViewData["Title"] = "Thêm Công Nợ";
}

<h2>Thêm Công Nợ</h2>

<form asp-action="Create">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="MaCongNo" class="control-label">Mã Công nợ</label>
        <input asp-for="MaCongNo" class="form-control" />
        <span asp-validation-for="MaCongNo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaKH" class="control-label">Khách hàng</label>
        <select asp-for="MaKH" class="form-control" asp-items="ViewBag.MaKH"></select>
        <span asp-validation-for="MaKH" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SoTienNo" class="control-label">Số tiền còn nợ</label>
        <input asp-for="SoTienNo" class="form-control" />
        <span asp-validation-for="SoTienNo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HanThanhToan" class="control-label">Hạn thanh toán</label>
        <input asp-for="HanThanhToan" type="date" class="form-control" />
        <span asp-validation-for="HanThanhToan" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TrangThai" class="control-label">Trạng thái</label>
        <select asp-for="TrangThai" class="form-control" asp-items="ViewBag.TrangThaiList"></select>
        <span asp-validation-for="TrangThai" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <input type="submit" value="Lưu" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
