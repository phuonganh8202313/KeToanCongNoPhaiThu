@model KeToanCongNoPhaiThu.Models.CongNo

@{
    ViewData["Title"] = "Sửa Công Nợ";
}

<h2>Sửa Công Nợ</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="MaCongNo" />
    <div class="form-group">
        <label asp-for="MaKH" class="control-label">Khách Hàng</label>
        <select asp-for="MaKH" class="form-control" asp-items="ViewBag.MaKH"></select>
    </div>
    <div class="form-group">
        <label asp-for="SoTienNo" class="control-label"></label>
        <input asp-for="SoTienNo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="HanThanhToan" class="control-label"></label>
        <input asp-for="HanThanhToan" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TrangThai" class="control-label"></label>
        <select asp-for="TrangThai" class="form-control" asp-items="ViewBag.TrangThaiList"></select>
        <span asp-validation-for="TrangThai" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <input type="submit" value="Cập nhật" class="btn btn-success" />
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</form>
