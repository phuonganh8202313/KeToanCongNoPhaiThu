@model KeToanCongNoPhaiThu.Models.HoaDon

@{
    ViewData["Title"] = "Chi tiết Hóa Đơn";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Hóa Đơn</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Mã HĐ</dt>
        <dd class="col-sm-10">@Model.MaHD</dd>
        <dt class="col-sm-2">Ngày lập</dt>
        <dd class="col-sm-10">@Model.NgayLap.ToString("dd/MM/yyyy")</dd>
        <dt class="col-sm-2">Tổng tiền</dt>
        <dd class="col-sm-10">@Model.TongTien.ToString("N0")</dd>
        <dt class="col-sm-2">Trạng thái</dt>
        <dd class="col-sm-10">@Model.TrangThai</dd>
        <dt class="col-sm-2">Khách hàng</dt>
        <dd class="col-sm-10">@Model.KhachHang?.TenKH</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.MaHD" class="btn btn-warning">Sửa</a> |
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>
