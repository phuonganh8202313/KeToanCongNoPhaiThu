@model IEnumerable<KeToanCongNoPhaiThu.Models.ThongBao>
@{
    ViewData["Title"] = "Trang chủ";
}

<h2>Chào mừng đến hệ thống Kế toán Công nợ</h2>

@if (User.Identity.IsAuthenticated)
{
    <p>Xin chào @User.Identity.Name!</p>
    <a asp-controller="Home" asp-action="Dashboard" class="btn btn-primary">Đi tới Dashboard</a>
    <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
        <button type="submit" class="btn btn-danger">Đăng xuất</button>
    </form>
}
else
{
    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-success">Đăng nhập</a>
}

<h2>Thông báo gần đây</h2>

@if (Model != null && Model.Any())
{
    <ul class="list-group">
        @foreach (var tb in Model)
        {
            <li class="list-group-item @(tb.DaDoc ? "" : "fw-bold")">
                <span>@tb.NgayGui.ToString("dd/MM/yyyy HH:mm")</span> -
                @tb.NoiDung
            </li>
        }
    </ul>
}
else
{
    <p>Chưa có thông báo nào.</p>
}
