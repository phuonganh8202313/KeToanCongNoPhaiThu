@model IEnumerable<KeToanCongNoPhaiThu.Models.KhachHang>

<h2>Danh sách Khách Hàng</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Thêm Khách Hàng</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên KH</th>
            <th>Địa chỉ</th>
            <th>SĐT</th>
            <th>Email</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TenKH</td>
                <td>@item.DiaChi</td>
                <td>@item.SDT</td>
                <td>@item.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaKH" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Details" asp-route-id="@item.MaKH" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Delete" asp-route-id="@item.MaKH" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
