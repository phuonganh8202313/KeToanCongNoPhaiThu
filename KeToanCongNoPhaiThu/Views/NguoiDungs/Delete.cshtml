@model KeToanCongNoPhaiThu.Models.NguoiDung

@{
    ViewData["Title"] = "Xóa người dùng";
}

<h2>Xóa người dùng</h2>
<h4>Bạn có chắc chắn muốn xóa người dùng này?</h4>
<hr />

<div class="card p-3">
    <dl class="row">
        <dt class="col-sm-3">Tên đăng nhập</dt>
        <dd class="col-sm-9">@Model.TenDangNhap</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Họ tên</dt>
        <dd class="col-sm-9">@Model.HoTen</dd>

        <dt class="col-sm-3">Ngày sinh</dt>
        <dd class="col-sm-9">@Model.NgaySinh?.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-3">Vai trò</dt>
        <dd class="col-sm-9">@Model.VaiTro</dd>
    </dl>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
