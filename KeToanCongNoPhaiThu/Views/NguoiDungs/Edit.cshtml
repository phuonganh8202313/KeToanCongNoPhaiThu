@model KeToanCongNoPhaiThu.Models.NguoiDung
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Sửa người dùng";
}

<h2>Sửa người dùng</h2>
<hr />

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="HoTen" class="control-label">Họ và tên</label>
        <input asp-for="HoTen" class="form-control" />
        <span asp-validation-for="HoTen" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NgaySinh" class="control-label">Ngày sinh</label>
        <input asp-for="NgaySinh" type="date" class="form-control" />
        <span asp-validation-for="NgaySinh" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="role">Vai trò</label>
        <select name="role" class="form-control" asp-items="ViewBag.Roles"></select>
    </div>

    @if (Model.VaiTro == "Giám đốc")
    {
        <div class="form-group">
            <label>Trạng thái duyệt</label>
            @if (Model.IsApproved)
            {
                <span class="text-success">Đã duyệt</span>
            }
            else
            {
                <span class="text-danger">Chưa duyệt</span>
            }
        </div>
    }

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
