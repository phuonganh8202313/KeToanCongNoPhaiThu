@model KeToanCongNoPhaiThu.Models.ThanhToan

@{
    ViewData["Title"] = "Thêm Thanh Toán";
}

<h2>Thêm Thanh Toán</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="MaTT" class="control-label">Mã giao dịch thanh toán</label>
        <input asp-for="MaTT" class="form-control" />
        <span asp-validation-for="MaTT" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaHD" class="control-label">Hóa Đơn</label>
        <select asp-for="MaHD" class="form-control" asp-items="ViewBag.MaHD"></select>
        <span asp-validation-for="MaHD" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NgayThanhToan" class="control-label">Ngày thanh toán</label>
        <input asp-for="NgayThanhToan" type="date" class="form-control" />
        <span asp-validation-for="NgayThanhToan" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NoiDung" class="control-label">Nội dung</label>
        <input asp-for="NoiDung" class="form-control" />
        <span asp-validation-for="NoiDung" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SoTienThanhToan" class="control-label">Số tiền đã thanh toán</label>
        <input asp-for="SoTienThanhToan" class="form-control" />
        <span asp-validation-for="SoTienThanhToan" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NguoiGhiNhanId" class="control-label">Người ghi nhận</label>
        <select asp-for="NguoiGhiNhanId" asp-items="ViewBag.NhanVien" class="form-control">
            <option value="">-- Chọn nhân viên --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="HinhThuc" class="control-label">Hình thức thanh toán</label>
        <select asp-for="HinhThuc" class="form-control" id="hinhThuc">
            <option value="Tiền mặt">Tiền mặt</option>
            <option value="Chuyển khoản">Chuyển khoản</option>
        </select>
    </div>

    <div class="form-group" id="chuyenKhoanFields" style="display:none;">
        <label asp-for="NganHangNhan" class="control-label">Ngân Hàng</label>
        <input asp-for="NganHangNhan" class="form-control" />

        <label asp-for="TaiKhoanNhan" class="control-label">Số Tài khoản</label>
        <input asp-for="TaiKhoanNhan" class="form-control" />
    </div>
    <div class="form-group mt-2">
        <input type="submit" value="Lưu" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</form>

@section Scripts {
    <script>
        document.getElementById('hinhThuc').addEventListener('change', function() {
            var fields = document.getElementById('chuyenKhoanFields');
            if (this.value === 'Chuyển khoản') fields.style.display = 'block';
            else fields.style.display = 'none';
        });

        // hiển thị đúng khi load lại
        window.addEventListener('load', function() {
            var evt = new Event('change');
            document.getElementById('hinhThuc').dispatchEvent(evt);
        });
    </script>
}

